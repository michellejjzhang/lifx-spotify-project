extends layout

block currently-playing
    script(src='/javascripts/clientSide.js')
    div.row
        div.col-md-3
            img(src=data['currentlyPlayingImage'])
        div.col-md-8
            h1 Currently Listening To:
            h2= data['songName']
            h3 Song Analysis
                ul#songInfo
                    if data['songAnalysis']
                        for val, index in data['songAnalysis']
                            li= index + ': ' + val
                    else
                        li= ''

